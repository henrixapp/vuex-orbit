{
  "name": "vuex-orbit",
  "version": "0.0.7a",
  "description": "A store for vuex and orbit",
  "main": "dist/commonjs/es5/index.js",
  "module": "dist/modules/es5/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && BROCCOLI_ENV=dist broccoli build dist",
    "build:tests": "rm -rf tests && BROCCOLI_ENV=tests broccoli build tests",
    "prepare": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrixapp/vuex-orbit.git"
  },
  "keywords": [
    "vuex",
    "orbit-js"
  ],
  "author": "Henrik Reinst√§dtler <henrik@mathphys.stura.uni-heidelberg.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/henrixapp/vuex-orbit/issues"
  },
  "homepage": "https://github.com/henrixapp/vuex-orbit#readme",
  "dependencies": {
    "@orbit/coordinator": "^0.16.0-beta.1",
    "@orbit/core": "^0.16.0-beta.1",
    "@orbit/data": "^0.16.0-beta.1",
    "@orbit/immutable": "^0.16.0-beta.1",
    "@orbit/store": "^0.16.0-beta.1",
    "@orbit/utils": "^0.16.0-beta.1",
    "vue": "^2.6.4",
    "vuex": "^3.0.1",
    "vuex-map-fields": "^1.3.1"
  },
  "devDependencies": {
    "@glimmer/build": "^0.9.1",
    "@types/jest": "^24.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-jest": "^24.1.0",
    "jest": "^24.1.0",
    "sinon": "^1.17.7",
    "ts-jest": "^23.10.5",
    "vue-jest": "^3.0.3",
    "vue-template-compiler": "^2.6.4",
    "whatwg-fetch": "^2.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue,ts}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue",
      "ts",
      "tsx"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
